import java.util.*;

public class People {
    private String firstName;
    private String lastName;
    private int age;
    private String gender;

    // Constructor
    public People(String _firstName, String _lastName, int _age,
            String _gender) {
        this.firstName = _firstName;
        this.lastName = _lastName;
        this.age = _age;
        this.gender = _gender;
    }

    // Accessors
    public String getFirstName() {
        return this.firstName;
    }

    public String getLastName() {
        return this.lastName;
    }

    public String getName() {
        return this.firstName + " " + this.lastName;
    }

    public int getAge() {
        return this.age;
    }

    public String getGender() {
        return this.gender;
    }

    // Mutators
    public void setFirstName(String _firstName) {
        this.firstName = _firstName;
    }

    public void setSecondName(String _lastName) {
        this.lastName = _lastName;
    }

    public void setAge(int _age) {
        this.age = _age;
    }

    public void setGender(String _gender) {
        this.gender = _gender;
    }

    // Check if a person's name is already in a specific map
    // before calling addFriend() or addChild() or addParents() method.
    // The code for iterating over a HashMap below is from:
    // https://stackoverflow.com/questions/1066589/iterate-through-a-hashmap
    public boolean alreadyExisted(String inputString, <String, People> map)
    {
        Iterator iterator = map.entrySet().iterator();
        while (iterator.hasNext()) {
            Map.Entry pair = (Map.Entry)iterator.next();
            if (inputString.equals(pair.getKey()))   { return true; }
            iterator.remove(); // avoids a ConcurrentModificationException
        }
        
        //return false if the input is not found in the current list.
        return false;
    }
    
    
}
